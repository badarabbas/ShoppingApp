<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#fff"
    android:padding="16dp">

    //UPPER LAYOUT
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:background="@drawable/vogue_icon"/>


    </LinearLayout>




    //MAIN CONTENT
    <LinearLayout
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                //INNER CARDVIEW LAYOUT
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="Password Reset"
                        android:textSize="24dp"

                        />


                    <EditText
                        android:id="@+id/EmailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email Address"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_email_icon"
                        android:drawablePadding="4dp"
                        android:layout_marginTop="16dp"/>





                    <Button
                        android:id="@+id/ResetPasswordBTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Resest Password"
                        android:textAllCaps="false"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/NewAccountTV"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't Have An Account Yet?"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        />

                    <Button
                        android:id="@+id/CreateBTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Account"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>





    //LOWER LAYOUT
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>


</LinearLayout>